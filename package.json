{
  "name": "blade-sdk.js",
  "version": "0.5.0",
  "description": "Hedera SDK wrapper with Blade features",
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:web-view",
    "build:esm": "tsc -p config/tsconfig.esm.json",
    "build:cjs": "tsc -p config/tsconfig.cjs.json",
    "build:web-view": "webpack --progress --color --mode production",
    "dev": "webpack --progress --color --watch --mode development",
    "prepack": "npm run build",
    "clean": "rm -rf ./lib",
    "publish:web-view": "npm run build:web-view && node utils/publish-sdk-bundle.js",
    "test": "jest --coverage",
    "deploy-test-contract": "solcjs --bin --abi test/contract/TestContract.sol -o ./test/contract && node test/contract/deploy.js",
    "docs": "typedoc --theme markdown --out docs --entryDocument contents.md --readme none --hideGenerator src"
  },
  "keywords": [
    "hedera",
    "blade",
    "sdk"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Blade-Labs/blade-sdk.js"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Blade Team (https://www.bladewallet.io/)",
  "contributors": [
    "Ihor Dubii <the.gary.du@gmail.com> (https://gary.pp.ua/)"
  ],
  "license": "ISC",
  "dependencies": {
    "@hashgraph/hethers": "^1.2.2",
    "@hashgraph/sdk": "^2.19.2",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@jest/types": "^29.3.1",
    "@types/jest": "^29.2.3",
    "@types/node-fetch": "^2.6.2",
    "core-js": "^3.29.1",
    "dotenv": "^16.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "prettier": "^2.8.3",
    "shelljs": "^0.8.5",
    "solc": "0.8.8",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.23.28",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.7.4",
    "webpack": "^5.76.3",
    "webpack-cli": "^4.10.0"
  }
}
